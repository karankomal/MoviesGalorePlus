<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:backgroundTint="@color/dark_linen">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_media_item"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:transitionName="poster"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toEndOf="@+id/img_media_item"
                android:padding="5dp"
                android:layout_below="@+id/img_media_item"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/img_media_item"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/media_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Gran Turismo"
                    android:textColor="@color/onyx"
                    android:fontFamily="@font/abstergo"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>